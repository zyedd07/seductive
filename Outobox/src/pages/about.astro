---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Us - Seductive Medical & Beauty Equipment">
    <!-- Hero Section -->
    <section class="about-hero">
        <div class="about-hero-container">
            <div class="badge animate-fade">
                <span class="badge-dot"></span>
                <span>Our Story</span>
            </div>
            
            <h1 class="about-hero-heading animate-slide-up">
                About <span class="red-text">Seductive</span>
            </h1>
            
            <p class="about-hero-text animate-slide-up delay-1">
                16 years of excellence in medical and beauty equipment manufacturing, serving professionals across 60+ countries worldwide
            </p>
        </div>
    </section>

    <!-- Company Overview -->
    <section class="company-overview">
        <div class="overview-container">
            <div class="overview-grid">
                <div class="overview-image animate-on-scroll fade-in">
                    <div class="image-frame">
                        <img src="https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?q=80&w=800" alt="Medical Equipment Manufacturing" />
                        <div class="image-overlay"></div>
                    </div>
                </div>
                
                <div class="overview-content animate-on-scroll slide-up delay-1">
                    <span class="section-label">Our Commitment</span>
                    <h2 class="section-title">
                        Leading Innovation in <span class="red-text">Medical Aesthetics</span>
                    </h2>
                    <p class="overview-text">
                        With over 16 years of continuous development and innovation, our products have earned an outstanding reputation in both domestic and international markets. We are committed to developing and manufacturing premium medical and beauty equipment, combining cutting-edge technology with unwavering dedication to excellence.
                    </p>
                    <p class="overview-text">
                        Our comprehensive product portfolio spans 14 specialized series with over 40 distinct models, trusted by professionals across 60+ countries worldwide.
                    </p>
                    
                    <div class="overview-features">
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                                <polyline points="22 4 12 14.01 9 11.01"/>
                            </svg>
                            <span>ISO Certified Quality</span>
                        </div>
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                            </svg>
                            <span>CE Approved Products</span>
                        </div>
                        <div class="feature-item">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="2" y1="12" x2="22" y2="12"/>
                                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                            </svg>
                            <span>Global Distribution Network</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="stats-container">
            <div class="stats-grid">
                <div class="stat-box animate-on-scroll scale-up">
                    <div class="stat-icon">
                        <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                            <path d="M2 17l10 5 10-5"/>
                            <path d="M2 12l10 5 10-5"/>
                        </svg>
                    </div>
                    <div class="stat-number" data-count="16">0</div>
                    <div class="stat-label">Years of Excellence</div>
                    <p class="stat-desc">Continuous innovation and development</p>
                </div>

                <div class="stat-box animate-on-scroll scale-up delay-1">
                    <div class="stat-icon">
                        <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="2" y1="12" x2="22" y2="12"/>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                        </svg>
                    </div>
                    <div class="stat-number" data-count="60">0</div>
                    <div class="stat-label">Countries Served</div>
                    <p class="stat-desc">Worldwide distribution network</p>
                </div>

                <div class="stat-box animate-on-scroll scale-up delay-2">
                    <div class="stat-icon">
                        <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                        </svg>
                    </div>
                    <div class="stat-number" data-count="14">0</div>
                    <div class="stat-label">Product Series</div>
                    <p class="stat-desc">Comprehensive technology portfolio</p>
                </div>

                <div class="stat-box animate-on-scroll scale-up delay-3">
                    <div class="stat-icon">
                        <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
                        </svg>
                    </div>
                    <div class="stat-number" data-count="40">0</div>
                    <div class="stat-label">Product Models</div>
                    <p class="stat-desc">Diverse solutions for every need</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Portfolio -->
    <section class="portfolio-section">
        <div class="portfolio-container">
            <div class="section-head animate-on-scroll slide-up">
                <span class="section-label">Product Range</span>
                <h2 class="section-title">
                    Comprehensive <span class="red-text">Technology Portfolio</span>
                </h2>
                <p class="section-subtitle">
                    14 specialized series covering every aspect of medical aesthetics and beauty treatments
                </p>
            </div>

            <div class="portfolio-grid">
                <div class="portfolio-card animate-on-scroll fade-in">
                    <div class="portfolio-number">01</div>
                    <h3 class="portfolio-title">CO2 Laser Systems</h3>
                    <p class="portfolio-desc">Advanced fractional and ablative laser technology</p>
                </div>

                <div class="portfolio-card animate-on-scroll fade-in delay-1">
                    <div class="portfolio-number">02</div>
                    <h3 class="portfolio-title">Diode Laser Hair Removal</h3>
                    <p class="portfolio-desc">Efficient permanent hair reduction solutions</p>
                </div>

                <div class="portfolio-card animate-on-scroll fade-in delay-2">
                    <div class="portfolio-number">03</div>
                    <h3 class="portfolio-title">1064nm ND YAG Laser</h3>
                    <p class="portfolio-desc">Vascular and pigmentation treatment systems</p>
                </div>

                <div class="portfolio-card animate-on-scroll fade-in delay-3">
                    <div class="portfolio-number">04</div>
                    <h3 class="portfolio-title">Picosecond Laser</h3>
                    <p class="portfolio-desc">Ultra-fast pulse technology for skin rejuvenation</p>
                </div>

                <div class="portfolio-card animate-on-scroll fade-in">
                    <div class="portfolio-number">05</div>
                    <h3 class="portfolio-title">IPL RF Systems</h3>
                    <p class="portfolio-desc">Multifunctional beauty and skin treatment</p>
                </div>

                <div class="portfolio-card animate-on-scroll fade-in delay-1">
                    <div class="portfolio-number">06</div>
                    <h3 class="portfolio-title">HIFU Devices</h3>
                    <p class="portfolio-desc">Non-invasive face and body lifting technology</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Factory Section -->
    <section class="factory-section">
        <div class="factory-container">
            <div class="factory-grid">
                <div class="factory-content animate-on-scroll slide-up">
                    <span class="section-label">Our Facility</span>
                    <h2 class="section-title">
                        State-of-the-Art <span class="red-text">Manufacturing</span>
                    </h2>
                    <p class="factory-text">
                        Our fully-owned 7,000 m² manufacturing facility features state-of-the-art equipment and modern infrastructure designed for optimal production efficiency. With over 50 experienced professionals and a dedicated R&D team of 10 engineers, we ensure every product meets the highest quality standards.
                    </p>
                    
                    <div class="factory-features">
                        <div class="factory-feature">
                            <div class="factory-feature-icon">
                                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="2" y="8" width="20" height="12" rx="2"/>
                                    <path d="M6 8V6a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v2"/>
                                </svg>
                            </div>
                            <div>
                                <h4>7,000 m² Facility</h4>
                                <p>Modern manufacturing infrastructure</p>
                            </div>
                        </div>

                        <div class="factory-feature">
                            <div class="factory-feature-icon">
                                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                    <circle cx="9" cy="7" r="4"/>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                </svg>
                            </div>
                            <div>
                                <h4>50+ Professionals</h4>
                                <p>Skilled workforce ensuring quality</p>
                            </div>
                        </div>

                        <div class="factory-feature">
                            <div class="factory-feature-icon">
                                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                                    <path d="M2 17l10 5 10-5"/>
                                </svg>
                            </div>
                            <div>
                                <h4>Expert R&D Team</h4>
                                <p>10 hardware & software engineers</p>
                            </div>
                        </div>

                        <div class="factory-feature">
                            <div class="factory-feature-icon">
                                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                </svg>
                            </div>
                            <div>
                                <h4>24-Hour Testing</h4>
                                <p>Comprehensive quality control</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="factory-image animate-on-scroll fade-in delay-2">
                    <div class="image-frame">
                        <img src="/emp.png" alt="Manufacturing Facility" />
                        <div class="image-overlay"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <div class="team-container">
            <div class="section-head animate-on-scroll slide-up">
                <span class="section-label">Our People</span>
                <h2 class="section-title">
                    Expert <span class="red-text">Sales Team</span>
                </h2>
                <p class="section-subtitle">
                    Professional team members trained with comprehensive knowledge to provide exceptional service
                </p>
            </div>

            <div class="team-grid">
                <div class="team-card animate-on-scroll scale-up">
                    <div class="team-icon-box">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                        </svg>
                    </div>
                    <h3 class="team-card-title">Professional Training</h3>
                    <p class="team-card-text">
                        Our team members undergo extensive training programs, equipping them with professional knowledge to help every customer identify the ideal products.
                    </p>
                </div>

                <div class="team-card animate-on-scroll scale-up delay-1">
                    <div class="team-icon-box">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                            <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                            <line x1="12" y1="22.08" x2="12" y2="12"/>
                        </svg>
                    </div>
                    <h3 class="team-card-title">Comprehensive Support</h3>
                    <p class="team-card-text">
                        We provide personalized guidance to help you gain a deeper understanding of our company, capabilities, and comprehensive solutions for your business.
                    </p>
                </div>

                <div class="team-card animate-on-scroll scale-up delay-2">
                    <div class="team-icon-box">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                    </div>
                    <h3 class="team-card-title">Responsive After-Sales</h3>
                    <p class="team-card-text">
                        Our dedicated support team addresses any after-sales concerns promptly and efficiently, ensuring complete customer satisfaction without delays.
                    </p>
                </div>
            </div>

            <div class="cta-box animate-on-scroll fade-in">
                <a href="/contact" class="btn-red-large">
                    <span>Contact Our Team</span>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                        <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --red: #e31e3f;
            --red-dark: #c41a35;
            --red-light: #ff4d6d;
            --white: #ffffff;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-600: #4b5563;
            --gray-900: #111827;
        }

        /* About Hero Section */
        .about-hero {
            background: var(--gray-50);
            padding: 160px 60px 100px;
            text-align: center;
        }

        .about-hero-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: var(--white);
            padding: 10px 20px;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 32px;
            border: 2px solid var(--gray-100);
        }

        .badge-dot {
            width: 8px;
            height: 8px;
            background: var(--red);
            border-radius: 50%;
            animation: pulse-dot 2s infinite;
        }

        @keyframes pulse-dot {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.2); opacity: 0.8; }
        }

        .about-hero-heading {
            font-family: 'Playfair Display', serif;
            font-size: 72px;
            font-weight: 700;
            line-height: 1.1;
            color: var(--gray-900);
            margin-bottom: 28px;
            letter-spacing: -1px;
        }

        .red-text {
            color: var(--red);
        }

        .about-hero-text {
            font-size: 20px;
            line-height: 1.7;
            color: var(--gray-600);
            max-width: 700px;
            margin: 0 auto;
        }

        /* Company Overview */
        .company-overview {
            background: var(--white);
            padding: 120px 60px;
        }

        .overview-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .overview-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
        }

        .image-frame {
            position: relative;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
        }

        .image-frame img {
            width: 100%;
            height: 550px;
            object-fit: cover;
            display: block;
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(227, 30, 63, 0.1) 0%, transparent 100%);
        }

        .section-label {
            display: inline-block;
            background: var(--white);
            color: var(--red);
            padding: 8px 24px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 20px;
            border: 2px solid var(--red);
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 24px;
            line-height: 1.2;
            letter-spacing: -1px;
        }

        .overview-text {
            font-size: 17px;
            line-height: 1.8;
            color: var(--gray-600);
            margin-bottom: 20px;
        }

        .overview-features {
            display: flex;
            flex-direction: column;
            gap: 16px;
            margin-top: 32px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 15px;
            font-weight: 600;
            color: var(--gray-900);
        }

        .feature-item svg {
            color: var(--red);
            flex-shrink: 0;
        }

        /* Stats Section */
        .stats-section {
            background: var(--gray-50);
            padding: 100px 60px;
        }

        .stats-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 32px;
        }

        .stat-box {
            background: var(--white);
            padding: 48px 32px;
            border-radius: 16px;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .stat-box:hover {
            transform: translateY(-8px);
            border-color: var(--red);
            box-shadow: 0 20px 40px rgba(227, 30, 63, 0.15);
        }

        .stat-icon {
            color: var(--red);
            margin-bottom: 24px;
        }

        .stat-number {
            font-family: 'Playfair Display', serif;
            font-size: 56px;
            font-weight: 700;
            color: var(--red);
            line-height: 1;
            margin-bottom: 12px;
        }

        .stat-number::after {
            content: '+';
            font-size: 36px;
        }

        .stat-label {
            font-size: 16px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-desc {
            font-size: 14px;
            color: var(--gray-600);
            line-height: 1.5;
        }

        /* Portfolio Section */
        .portfolio-section {
            background: var(--white);
            padding: 120px 60px;
        }

        .portfolio-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .section-head {
            text-align: center;
            margin-bottom: 80px;
        }

        .section-subtitle {
            font-size: 18px;
            color: var(--gray-600);
            max-width: 600px;
            margin: 0 auto;
        }

        .portfolio-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 32px;
        }

        .portfolio-card {
            background: var(--gray-50);
            padding: 40px 32px;
            border-radius: 16px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .portfolio-card:hover {
            transform: translateY(-8px);
            border-color: var(--red);
            background: var(--white);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .portfolio-number {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            font-weight: 700;
            color: var(--red);
            opacity: 0.2;
            line-height: 1;
            margin-bottom: 16px;
        }

        .portfolio-title {
            font-family: 'Playfair Display', serif;
            font-size: 22px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }

        .portfolio-desc {
            font-size: 15px;
            line-height: 1.6;
            color: var(--gray-600);
        }

        /* Factory Section */
        .factory-section {
            background: var(--gray-50);
            padding: 120px 60px;
        }

        .factory-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .factory-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
        }

        .factory-text {
            font-size: 17px;
            line-height: 1.8;
            color: var(--gray-600);
            margin-bottom: 32px;
        }

        .factory-features {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .factory-feature {
            display: flex;
            align-items: flex-start;
            gap: 16px;
        }

        .factory-feature-icon {
            width: 56px;
            height: 56px;
            background: var(--white);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--red);
            flex-shrink: 0;
        }

        .factory-feature h4 {
            font-size: 17px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 4px;
        }

        .factory-feature p {
            font-size: 14px;
            color: var(--gray-600);
            line-height: 1.5;
        }

        /* Team Section */
        .team-section {
            background: var(--white);
            padding: 120px 60px;
        }

        .team-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 32px;
            margin-bottom: 60px;
        }

        .team-card {
            background: var(--gray-50);
            padding: 48px 36px;
            border-radius: 16px;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .team-card:hover {
            transform: translateY(-8px);
            border-color: var(--red);
            background: var(--white);
            box-shadow: 0 20px 40px rgba(227, 30, 63, 0.15);
        }

        .team-icon-box {
            width: 88px;
            height: 88px;
            background: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            color: var(--red);
        }

        .team-card-title {
            font-family: 'Playfair Display', serif;
            font-size: 24px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 16px;
            letter-spacing: -0.5px;
        }

        .team-card-text {
            font-size: 16px;
            line-height: 1.7;
