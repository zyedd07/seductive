            gap: 0.5rem;
        }

        .terminal-buttons span {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .btn-close { background: #ff5f56; }
        .btn-minimize { background: #ffbd2e; }
        .btn-maximize { background: #27c93f; }

        .terminal-title {
            font-size: 0.85rem;
            color: var(--text-secondary);
            font-family: 'Courier New', monospace;
        }

        .terminal-body {
            padding: 1.5rem;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            min-height: 250px;
        }

        .terminal-line {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .prompt {
            color: var(--primary);
        }

        .command {
            color: var(--secondary);
        }

        .typing {
            animation: typing 3s steps(30) infinite;
        }

        .cursor {
            animation: blink 1s infinite;
        }

        @keyframes typing {
            0%, 100% { width: 0; }
            50% { width: 100%; }
        }

        .terminal-output {
            color: var(--text-secondary);
            margin: 1rem 0;
        }

        .terminal-output div {
            margin-bottom: 0.5rem;
        }

        .scan-progress {
            width: 100%;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            margin: 1rem 0;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            animation: progressLoad 2s ease-in-out infinite;
        }

        @keyframes progressLoad {
            0% { width: 0; }
            50% { width: 70%; }
            100% { width: 100%; }
        }

        .port-line {
            color: var(--primary);
        }

        .floating-card {
            position: absolute;
            background: rgba(15, 15, 15, 0.95);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 12px;
            padding: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            backdrop-filter: blur(10px);
            animation: float 6s ease-in-out infinite;
        }

        .card-1 {
            top: -20px;
            right: -30px;
            width: 220px;
            animation-delay: 0s;
        }

        .card-2 {
            bottom: 80px;
            left: -40px;
            width: 200px;
            animation-delay: 2s;
        }

        .card-3 {
            bottom: -10px;
            right: 40px;
            width: 180px;
            animation-delay: 4s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        .card-icon {
            font-size: 2rem;
            flex-shrink: 0;
        }

        .card-content {
            flex: 1;
        }

        .card-title {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .card-progress {
            width: 100%;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border-radius: 2px;
        }

        .card-stats {
            display: flex;
            gap: 0.5rem;
        }

        .stat-badge {
            padding: 0.25rem 0.5rem;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 4px;
            font-size: 0.7rem;
        }

        .card-metric {
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
        }

        .metric-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
        }

        .metric-label {
            font-size: 0.75rem;
            color: var(--text-secondary);
        }

        /* ===== ABOUT SECTION ===== */
        .about-section {
            position: relative;
            padding: 8rem 0;
            z-index: 1;
        }

        .about-grid {
            display: grid;
            grid-template-columns: 1fr 1.2fr;
            gap: 5rem;
            align-items: center;
        }

        .security-shield {
            position: relative;
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
        }

        .security-shield svg {
            width: 100%;
            height: auto;
        }

        .shield-outline {
            stroke-dasharray: 1000;
            stroke-dashoffset: 1000;
            animation: drawShield 2s ease-out forwards;
        }

        @keyframes drawShield {
            to { stroke-dashoffset: 0; }
        }

        .shield-circle {
            animation: pulse 2s ease-in-out infinite 2s;
        }

        .shield-check {
            stroke-dasharray: 100;
            stroke-dashoffset: 100;
            animation: drawCheck 0.5s ease-out 2.5s forwards;
        }

        @keyframes drawCheck {
            to { stroke-dashoffset: 0; }
        }

        .shield-particles {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
        }

        .shield-particle {
            position: absolute;
            width: 6px;
            height: 6px;
            background: var(--primary);
            border-radius: 50%;
            animation: shieldParticle 4s infinite;
        }

        .shield-particle:nth-child(1) { top: 20%; left: 20%; animation-delay: 0s; }
        .shield-particle:nth-child(2) { top: 20%; right: 20%; animation-delay: 1s; }
        .shield-particle:nth-child(3) { bottom: 30%; left: 10%; animation-delay: 2s; }
        .shield-particle:nth-child(4) { bottom: 30%; right: 10%; animation-delay: 3s; }

        @keyframes shieldParticle {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.5); opacity: 1; }
        }

        .section-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.3);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.85rem;
            margin-bottom: 1.5rem;
        }

        .badge-icon {
            font-size: 1rem;
        }

        .section-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .about-description {
            font-size: 1.05rem;
            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
        }

        .about-features {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 2rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1rem;
        }

        /* ===== HIGHLIGHTS SECTION ===== */
        .highlights-section {
            position: relative;
            padding: 8rem 0;
            z-index: 1;
        }

        .section-header-center {
            text-align: center;
            margin-bottom: 5rem;
        }

        .section-title-large {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .section-subtitle {
            font-size: 1.15rem;
            color: var(--text-secondary);
        }

        .highlights-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
        }

        .highlight-box {
            position: relative;
            background: rgba(15, 15, 15, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 16px;
            padding: 2rem;
            transition: all 0.3s;
        }

        .highlight-box:hover {
            transform: translateY(-10px);
            border-color: var(--primary);
        }

        .box-glow {
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .highlight-box:hover .box-glow {
            opacity: 0.1;
        }

        .box-header {
            margin-bottom: 1.5rem;
        }

        .box-icon {
            width: 60px;
            height: 60px;
            background: rgba(0, 255, 136, 0.1);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            margin-bottom: 1rem;
        }

        .highlight-box h3 {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .highlight-box p {
            color: var(--text-secondary);
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .box-footer {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .box-tag {
            padding: 0.375rem 0.75rem;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 6px;
            font-size: 0.8rem;
        }

        /* ===== CERTIFICATIONS SECTION ===== */
        .certifications-section {
            position: relative;
            padding: 8rem 0;
            z-index: 1;
            background: rgba(5, 5, 5, 0.5);
        }

        .cert-layout {
            display: grid;
            grid-template-columns: 1fr 1.2fr;
            gap: 5rem;
            align-items: center;
        }

        .cert-description {
            font-size: 1.05rem;
            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .cert-stats-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-top: 3rem;
        }

        .cert-stat {
            text-align: center;
        }

        .cert-stat .stat-value {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .cert-stat .stat-label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            margin-top: 0.5rem;
        }

        .cert-cards-stack {
            position: relative;
            height: 500px;
        }

        .cert-card {
            position: absolute;
            width: 100%;
            background: rgba(15, 15, 15, 0.9);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 20px;
            padding: 2rem;
            transition: all 0.3s;
        }

        .card-vapt {
            top: 0;
            left: 0;
            z-index: 3;
        }

        .card-cloud {
            top: 100px;
            left: 20px;
            z-index: 2;
        }

        .card-ad {
            top: 200px;
            left: 40px;
            z-index: 1;
        }

        .cert-card:hover {
            transform: translateY(-10px) scale(1.02);
            border-color: var(--primary);
            box-shadow: 0 20px 50px rgba(0, 255, 136, 0.3);
        }

        .cert-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .cert-icon {
            font-size: 2.5rem;
        }

        .cert-badge-live {
            padding: 0.375rem 0.75rem;
            background: rgba(0, 255, 136, 0.2);
            border: 1px solid var(--primary);
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--primary);
        }

        .cert-badge-soon {
            padding: 0.375rem 0.75rem;
            background: rgba(124, 58, 237, 0.2);
            border: 1px solid var(--tertiary);
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--tertiary);
        }

        .cert-card-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .cert-card-desc {
            font-size: 0.95rem;
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .cert-modules {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .cert-modules span {
            padding: 0.5rem 1rem;
            background: rgba(0, 212, 255, 0.1);
            border: 1px solid rgba(0, 212, 255, 0.3);
            border-radius: 8px;
            font-size: 0.85rem;
        }

        /* ===== MISSION SECTION ===== */
        .mission-section {
            position: relative;
            padding: 8rem 0;
            z-index: 1;
        }

        .mission-container {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            gap: 3rem;
            align-items: center;
        }

        .mission-item {
            background: rgba(15, 15, 15, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 20px;
            padding: 3rem;
            position: relative;
            overflow: hidden;
        }

        .mission-number {
            position: absolute;
            top: 2rem;
            right: 2rem;
            font-size: 6rem;
            font-weight: 800;
            opacity: 0.05;
            line-height: 1;
        }

        .mission-content-wrapper {
            position: relative;
            z-index: 1;
        }

        .mission-heading {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .mission-text {
            font-size: 1.05rem;
            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .mission-visual {
            position: relative;
            height: 150px;
            margin-top: 2rem;
        }

        .visual-ring {
            position: absolute;
            border: 2px solid;
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: ringPulse 3s ease-in-out infinite;
        }

        .ring-1 {
            width: 80px;
            height: 80px;
            border-color: var(--primary);
            animation-delay: 0s;
        }

        .ring-2 {
            width: 110px;
            height: 110px;
            border-color: var(--secondary);
            animation-delay: 1s;
        }

        .ring-3 {
            width: 140px;
            height: 140px;
            border-color: var(--tertiary);
            animation-delay: 2s;
        }

        @keyframes ringPulse {
            0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
            50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.5; }
        }

        .visual-core {
            position: absolute;
            width: 40px;
            height: 40px;
            background: var(--primary);
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 0 30px var(--primary);
        }

        .visual-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }

        .grid-cell {
            aspect-ratio: 1;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 8px;
            animation: cellBlink 2s ease-in-out infinite;
        }

        .grid-cell:nth-child(1) { animation-delay: 0s; }
        .grid-cell:nth-child(2) { animation-delay: 0.3s; }
        .grid-cell:nth-child(3) { animation-delay: 0.6s; }
        .grid-cell:nth-child(4) { animation-delay: 0.9s; }
        .grid-cell:nth-child(5) { animation-delay: 1.2s; }
        .grid-cell:nth-child(6) { animation-delay: 1.5s; }

        @keyframes cellBlink {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 1; }
        }

        .mission-divider {
            position: relative;
            width: 2px;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .divider-line {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, transparent, var(--primary), transparent);
        }

        .divider-dot {
            width: 12px;
            height: 12px;
            background: var(--primary);
            border-radius: 50%;
            position: relative;
            z-index: 1;
            box-shadow: 0 0 20px var(--primary);
        }

        /* ===== CONTACT SECTION ===== */
        .contact-section {
            position: relative;
            padding: 8rem 0;
            z-index: 1;
        }

        .contact-wrapper {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 5rem;
            align-items: center;
        }

        .contact-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .contact-description {
            font-size: 1.05rem;
            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 3rem;
        }

        .contact-action-grid {
            display: grid;
            gap: 1rem;
            margin-bottom: 3rem;
        }

        .action-btn {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            background: rgba(15, 15, 15, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 16px;
            padding: 1.5rem;
            cursor: pointer;
            transition: all 0.3s;
            text-align: left;
        }

        .action-btn:hover {
            border-color: var(--primary);
            transform: translateX(5px);
            background: rgba(0, 255, 136, 0.05);
        }

        .btn-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--bg-dark);
            flex-shrink: 0;
        }

        .btn-text {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .btn-label {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .btn-sublabel {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        .contact-info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .info-item svg {
            color: var(--primary);
        }

        .network-diagram {
            position: relative;
            width: 100%;
            height: 400px;
        }

        .network-node {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .node-center {
            width: 80px;
            height: 80px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: var(--primary);
            position: relative;
        }

        .node-pulse {
            position: absolute;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }

        .node-1 {
            width: 40px;
            height: 40px;
            top: 15%;
            left: 15%;
        }

        .node-2 {
            width: 40px;
            height: 40px;
            top: 15%;
            right: 15%;
        }

        .node-3 {
            width: 40px;
            height: 40px;
            bottom: 15%;
            left: 15%;
        }

        .node-4 {
            width: 40px;
            height: 40px;
            bottom: 15%;
            right: 15%;
        }

        .node-inner {
            width: 100%;
            height: 100%;
            background: var(--secondary);
            border-radius: 50%;
            box-shadow: 0 0 20px var(--secondary);
            animation: nodePulse 3s ease-in-out infinite;
        }

        @keyframes nodePulse {
            0%, 100% { transform: scale(1); opacity: 0.8; }
            50% { transform: scale(1.3); opacity: 1; }
        }

        .network-connections {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            pointer-events: none;
        }

        .connection-line {
            stroke: var(--primary);
            stroke-width: 1;
            opacity: 0.3;
            stroke-dasharray: 5, 5;
            animation: dashFlow 2s linear infinite;
        }

        @keyframes dashFlow {
            to { stroke-dashoffset: -10; }
        }

        /* ===== FOOTER ===== */
        .footer {
            position: relative;
            padding: 5rem 0 2rem;
            border-top: 1px solid rgba(0, 255, 136, 0.1);
            z-index: 1;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: 1.5fr 1fr;
            gap: 5rem;
            margin-bottom: 4rem;
        }

        .footer-logo {
            margin-bottom: 1.5rem;
        }

        .footer-brand-name {
            font-size: 1.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            letter-spacing: 0.05em;
        }

        .footer-tagline {
            font-size: 1rem;
            color: var(--text-secondary);
            line-height: 1.6;
        }

        .footer-links {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }

        .footer-column {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .footer-heading {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--primary);
        }

        .footer-column a {
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .footer-column a:hover {
            color: var(--text-primary);
            padding-left: 5px;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .footer-copyright {
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .footer-social {
            display: flex;
            gap: 1rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            transition: all 0.3s;
        }

        .social-link:hover {
            background: var(--primary);
            color: var(--bg-dark);
            border-color: var(--primary);
            transform: translateY(-3px);
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 1200px) {
            .hero-layout {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .about-grid,
            .cert-layout,
            .contact-wrapper {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .highlights-container {
                grid-template-columns: repeat(2, 1fr);
